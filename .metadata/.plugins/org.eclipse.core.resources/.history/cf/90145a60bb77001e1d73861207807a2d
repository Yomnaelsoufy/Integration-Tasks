package com.example.fourth.api.router;

import org.apache.camel.builder.RouteBuilder;
import org.springframework.stereotype.Component;

@Component
public class NafathVerificationRoute extends RouteBuilder {

    @Override
    public void configure() throws Exception {
        from("rest:http://localhost:8086/v1/nafath-app/id-verification/initiate")
                .setBody(constant("{\"header\":{\"requestId\":\"6390cc30-16d9-11eb-adc1-0242ac120002\",\"status\":{\"code\":\"I000000\",\"description\":\"Success\"}},\"body\":{\"transId\":\"3136fd60-3f89-4d24-a92f-b9c63a53807f\",\"random\":38}}"))
                .setHeader("Content-Type", constant("application/json"))
                .setHeader("Accept", constant("application/json"))
                .log("Request received: ${body}")
                .end();
    }
}
